max-width: 850px;
margin: 2.5rem auto;
padding: 2.5rem;
border-radius: 24px;
background: var(--card-bg);
box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
font-family: 'Inter', 'Segoe UI', sans-serif;
}


.content-container h1 {
margin: -2.5rem -2.5rem 2rem -2.5rem;
padding: 1.5rem 2.5rem;
