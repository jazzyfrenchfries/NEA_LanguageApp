    max-width:780px;
    width: 100%;
    margin:4rem auto;
    box-shadow: 0 12px 30px rgba(0,0,0,0.08),
        inset 0 1px 0 rgba(255,255,255,0.6);

}
.page-center{
    min-height: 70vh;
    align-items:center;
    justify-content: center;
    padding: 1rem;
}
