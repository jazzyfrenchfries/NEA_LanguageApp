@page "/leaderboard"
@inject DatabaseService Db
@using Microsoft.Data.SqlClient;

<PageTitle>Leaderboard</PageTitle>

<h1>Welcome to the leaderboards </h1>

@if(users == null)
{
    <p>Loading...</p>
    <p>@System.Security.Principal.WindowsIdentity.GetCurrent().Name</p>
}
else{
    <div class="leaderboard-container">
    <table class="leaderboard-table">
        <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Score</th>
        </tr>
        </thead>
        <tbody>
    @foreach(var item in users.Select((u,i ) => new {User = u,Index =i}))
    {
        <tr>
        <td >@(item.Index + 1)</td>
        <td >@item.User.Username</td>
        <td >@item.User.TotalScore</td>
        </tr>
    }
    </tbody>
     </table>
    </div>

}
@code{
    private List<User> users;
    protected override async Task OnInitializedAsync(){
        try{
            users = await Db.GetOverallLeaderboardAsync(20);
        }
        catch(Exception ex){
            Console.WriteLine("Error loading Leaderboard: " + ex);
        }
    }
}
<style>
.leaderboard-container {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}


.leaderboard-table {
    border-collapse: collapse;
    width: 100%; 
    max-width: 700px;
    background-color: #f9f9f9;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
}


.leaderboard-table th {
    background-color: var(--text-muted);
    color: white;
    padding: 12px;
    text-align: center;
    font-size: 1.1rem;
}

.leaderboard-table td {
    padding: 10px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

.leaderboard-table tr:hover {
    background-color: var(--text-main);
}

.leaderboard-table tr:nth-child(even) {
    background-color: #f7f7f7;
}
</style>