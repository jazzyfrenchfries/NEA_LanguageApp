@page "/leaderboard"
@inject DatabaseService Db
@using BootstrapBlazor.Components
@using Microsoft.Data.SqlClient;

<PageTitle>Leaderboard</PageTitle>
 <div class ="content-container">
<h1>Welcome to the leaderboards </h1>

@if(users == null)
{
    <p>Loading...</p>
    <p>@System.Security.Principal.WindowsIdentity.GetCurrent().Name</p>
}
else{ 
   
    <div class="leaderboard-toggle">
    <button class="button" @onclick="@(() => ChangeView("All"))">Overall</button>
<button class="button" @onclick="@(() => ChangeView("Vocabulary"))">Vocabulary</button>
<button class="button" @onclick="@(() => ChangeView("Conjugation"))">Conjugation</button>
<button class="button"@onclick="@(() => ChangeView("Listening"))">Listening</button>
    </div>
    <div class="leaderboard-container">
    <table class="leaderboard-table">
        <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Score</th>
        </tr>
        </thead>
        <tbody>
    @foreach(var item in users.Select((u,i ) => new {User = u,Index =i}))
    {
        <tr>
        <td >@(item.Index + 1)</td>
        <td >@item.User.Username</td>
        <td >@item.User.TotalScore</td>
        </tr>
    }
    </tbody>
     </table>
    </div>

}
</div>
@code{
    private List<User> users = new();
    private string selectedView = "All";
    protected override async Task OnInitializedAsync(){
        users = await Db.GetOverallLeaderboardAsync(20);
    }
    private async Task ChangeView(string view){
        selectedView = view;
        await LoadLeaderboard();
    }
    private async Task LoadLeaderboard(){
        if(selectedView == "All"){
            users = await Db.GetOverallLeaderboardAsync();
        }
        else{
            users = await Db.GetExerciseLeaderboardAsync(selectedView);
        }
    }
}
