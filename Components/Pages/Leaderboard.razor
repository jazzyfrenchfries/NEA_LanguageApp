@page "/leaderboard"
@inject DatabaseService Db
@using Microsoft.Data.SqlClient;

<PageTitle>Leaderboard</PageTitle>

<h1>Welcome to the leaderboards </h1>

@if(users == null)
{
    <p>Loading...</p>
    <p>@System.Security.Principal.WindowsIdentity.GetCurrent().Name</p>
}
else{
    <div class="leaderboard-container">
    <table class="leaderboard-table">
        <thead>
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Score</th>
        </tr>
        </thead>
        <tbody>
    @foreach(var item in users.Select((u,i ) => new {User = u,Index =i}))
    {
        <tr>
        <td >@(item.Index + 1)</td>
        <td >@item.User.Username</td>
        <td >@item.User.TotalScore</td>
        </tr>
    }
    </tbody>
     </table>
    </div>

}
@code{
    private List<User> users;
    protected override async Task OnInitializedAsync(){
        try{
            users = await Db.GetLeaderboardAsync(20);
        }
        catch(Exception ex){
            Console.WriteLine("Error loading Leaderboard: " + ex);
        }
    }
}
<style>
.leaderboard-container {
    display: flex;
    justify-content: center; /* centers horizontally */
    margin-top: 2rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Style the table */
.leaderboard-table {
    border-collapse: collapse;
    width: 60%; /* table width */
    max-width: 600px;
    background-color: #f9f9f9;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
}

/* Table header */
.leaderboard-table th {
    background-color: #4CAF50;
    color: white;
    padding: 12px;
    text-align: center;
    font-size: 1.1rem;
}

/* Table cells */
.leaderboard-table td {
    padding: 10px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

/* Hover effect for rows */
.leaderboard-table tr:hover {
    background-color: #f1f1f1;
}

/* Optional: alternate row colors */
.leaderboard-table tr:nth-child(even) {
    background-color: #f7f7f7;
}
</style>