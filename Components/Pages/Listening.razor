@page "/listening"
@rendermode InteractiveServer

@using Blazored.LocalStorage
@using Blazored.Modal
@using Blazored.Modal.Services

@inject DatabaseService Db
@inject NavigationManager NavMenu
@inject ILocalStorageService LocalStorage
@inject IModalService ModalService
@inject UserState UserState

<PageTitle>Listening</PageTitle>

@if (!isLoaded)
{
    <p>Loading...</p>
}
else if (UserState.CurrentUser == null)
{
    <p>You must be logged in to access this page.</p>
}
else if (!isPlaying)
{
    <h1>Listening Game</h1>
    <p>Test your listening skills! Click start to begin.</p>

    <div class="centered-container">
        <button class="start-button" @onclick="StartListening">Start</button>
    </div>

    <p>Logged in as <strong>@UserState.CurrentUser.Username</strong></p>
}
else
{
    <div class="listening-container">
        <h1>Listening</h1>
        <p>Your score: @score</p>

        @if (CurrentItem != null)
        {
            <p>@CurrentItem.FullText</p>

            <audio controls>
                <source src="@CurrentItem.AudioPath" type="audio/mp3" />
            </audio>
        }

        @if (isHintUsed)
        {
            <p><strong>Hint:</strong> @CurrentItem?.Hint</p>
        }

        <textarea
            @bind="userAnswer"
            @bind:event="oninput"
            placeholder="Type your answer here..."
            disabled="@iscorrect"
            class="answer-box">
        </textarea>

        @if (hasSubmitted)
        {
            <p class="@(iscorrect ? "correct" : "incorrect")">
                @(iscorrect ? "Correct!" : "Incorrect")
            </p>
        }

        <div class="centered-container">
            @if (!iscorrect)
            {
                <button @onclick="CheckAnswer">Submit</button>
            }
            else
            {
                <button @onclick="NextQuestion">Next Question</button>
            }

            <button @onclick="EndGame">End</button>

            @if (!isHintUsed)
            {
                <button @onclick="UseHint">Hint</button>
            }
        </div>
    </div>
}
@code {
    private bool isLoaded = false;
    private bool isPlaying = false;
    private bool iscorrect = false;
    private bool hasSubmitted = false;
    private bool isHintUsed = false;

    private int score = 0;
    private int currentKey;

    private string userAnswer = "";

    private List<ListeningItem> items = new();

    private ListeningItem? CurrentItem =>
        items.FirstOrDefault(i => i.ListeningID == currentKey);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        // Load user from LocalStorage AFTER JS is ready
        var user = await LocalStorage.GetItemAsync<User>("currentUser");

        if (user == null)
        {
            NavMenu.NavigateTo("/login");
            return;
        }

        UserState.SetUser(user);

        // Load listening items from DB
        items = await Db.GetListeningsAsync();

        isLoaded = true;
        StateHasChanged();
    }

    private void StartListening()
    {
        if (items.Count == 0) return;

        var item = items[Random.Shared.Next(items.Count)];
        currentKey = item.ListeningID;

        isPlaying = true;
        iscorrect = false;
        hasSubmitted = false;
        isHintUsed = false;
        userAnswer = "";
    }

    private async Task CheckAnswer()
    {
        hasSubmitted = true;

        if (CurrentItem == null) return;

        if (string.Equals(
            userAnswer.Trim(),
            CurrentItem.CorrectAnswer.Trim(),
            StringComparison.OrdinalIgnoreCase))
        {
            iscorrect = true;
            score++;

            await Db.SaveUserScoreAsync(
                UserState.CurrentUser!.UserID,
                "Listening",
                currentKey,
                1,
                true
            );

            UserState.CurrentUser.TotalScore += 1;
            await LocalStorage.SetItemAsync("currentUser", UserState.CurrentUser);
        }
    }

    private void NextQuestion()
    {
        StartListening();
    }

    private void UseHint()
    {
        isHintUsed = true;
    }
    private void EndGame(){
        var parameters = new ModalParameters();
        parameters.Add(nameof(EndGameModal.Score), score);
        ModalService.Show<EndGameModal>("Game Over", parameters);
    }
}


