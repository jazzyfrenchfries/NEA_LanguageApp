@page "/vocabulary"
@rendermode InteractiveServer
@using Blazored.LocalStorage
@using Blazored.Modal
@using Blazored.Modal.Services
@inject DatabaseService Db
@inject ILocalStorageService storageService
@inject NavigationManager NavMenu 
@inject UserState userState
@inject IModalService ModalService
<PageTitle>vocabulary</PageTitle>

 @if (!isLoaded){
    <p>Loading...</p>
}
else if (userState.CurrentUser == null)
{
    <p>You must be logged in to access this page.</p>
}

@if (!isPlaying)
{
    <div class="vocabulary-container">
    <h1>Vocabulary Game</h1>
    <p>Test your vocabulary knowledge! Click start to begin.</p>

    <div class="centered-container">
        <button class="start-button" @onclick="StartVocabulary">Start</button>
        <button class="options-button" @onclick="GameOptions">Options</button>
    </div>
    </div>
}
else
{
    <div class="vocabulary-container">
        <h1>Vocabulary</h1>
        <p>Your score: @score</p>

        @if (CurrentItem != null)
        {
            <p>What is this in English? : <strong>@CurrentItem.FrenchWord</strong></p>
        }
        @if (isHintUsed)
        {
            <p><strong>Hint:</strong> @CurrentItem?.Hint</p>
        }   

        <input class="answer-box"
               @bind="userAnswer"
               @bind:event="oninput"
               placeholder="Type your answer..."
               disabled="@iscorrect" />

        @if (hasSubmitted)
        {
            <div class="feedback">
                @if (iscorrect)
                {
                    <span class="correct">Correct! Click "Next Question" to continue.</span>
                }
                else
                {
                    <span class="incorrect">Incorrect! The correct answer is: @CurrentItem?.Translation</span>
                }
            </div>
        }

        <div class="centered-container">
            @if (!hasSubmitted)
            {
                <button class="check-button" @onclick="CheckAnswer">Submit</button>
            }
            else
            {
                <button class="check-button" @onclick="NextQuestion">Next Question</button>
            }

            <button class="end-button" @onclick="EndGame">End</button>  
            @if(!isHintUsed && !hasSubmitted)
            {
            <button class="hint-button" @onclick="UseHint">Hint</button>
            }
            @if(isHintUsed && !hasSubmitted){
                <button class="answer-button" @onclick="ShowAnswer">Reveal</button> 
            }

        </div>
    </div>
}

@code {
    bool isPlaying = false;
   
    private User currentUser;
    string userAnswer, hint, showAnswer;
    private int currentKey,totalCompleted, score , currentIndex;
    private bool iscorrect, hasSubmitted, isHintUsed, isLoaded,hasRevealed;
   
    private List<VocabItem> items = new();
     private List<VocabItem> activeQuestions = new();
    private VocabItem? CurrentItem => activeQuestions.FirstOrDefault(i => i.VocabID == currentKey);


protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        var user = await storageService.GetItemAsync<User>("currentUser");
        if (user == null)
        {
            NavMenu.NavigateTo("/login");
            return;
        }

        userState.SetUser(user);

        items = await Db.GetVocabularyAsync();
        ApplyVocabularyFilter("All");
        isLoaded = true;
        StateHasChanged();
    }
    private void StartVocabulary(){
        if(activeQuestions.Count ==0) return;
        var currentQuestion = activeQuestions[Random.Shared.Next(activeQuestions.Count)];
        currentKey = currentQuestion.VocabID;
        
        isPlaying = true;
        iscorrect = false;
        hasSubmitted = false;
        isHintUsed = false;
        hasRevealed = false;
        userAnswer = "";
        hint = "";
        showAnswer="";

    }
  private async Task GameOptions()
{
    var modal = ModalService.Show<OptionsModalVocab>("Game Options");
    var result = await modal.Result;

    if(!result.Cancelled && result.Data is OptionsModalVocab.VocabularyOptions options){
            ApplyVocabularyFilter(options.SelectedList);
        }
}
private void ApplyVocabularyFilter(string selectedList){
        activeQuestions = 
        selectedList == "All"
            ? items.ToList()
            :items.Where(x => x.Options == selectedList)
            .ToList();
        currentIndex = 0;
         if(activeQuestions.Any()){
            currentKey = activeQuestions[Random.Shared.Next(activeQuestions.Count)].VocabID;
            iscorrect = false;
            hasSubmitted = false;
            isHintUsed = false;
            hasRevealed=false;
            userAnswer="";
            hint = " ";
        }
        StateHasChanged();
    }
    private async Task CheckAnswer(){
        hasSubmitted = true;
       if (string.Equals( userAnswer.Trim(), CurrentItem?.Translation?.Trim(),StringComparison.OrdinalIgnoreCase)){
            iscorrect = true;
            int pointsEarned = isHintUsed? 0:1;
            score += pointsEarned;
             await Db.SaveUserScoreAsync(
                userState.CurrentUser!.UserID,
                "vocabulary",
                currentKey,
                1,
                true
            );
            
            }
            userState.CurrentUser.TotalScore++;
            await storageService.SetItemAsync("currentUser", userState.CurrentUser);
    }
    private async Task ShowAnswer(){
        hasRevealed = true;
        hasSubmitted = true;
        iscorrect = true;
        showAnswer = CurrentItem.Translation;
    }
    private void NextQuestion(){
        StartVocabulary();
    }

     private void EndGame(){
        var parameters = new ModalParameters();
        parameters.Add(nameof(EndGameModal.Score), score);

        ModalService.Show<EndGameModal>("Game Over", parameters);
        isPlaying = false;
        score = 0;
    }

   
    private void UseHint(){
        isHintUsed = true;
        hint = CurrentItem?.Hint ?? string.Empty;
    }
}


