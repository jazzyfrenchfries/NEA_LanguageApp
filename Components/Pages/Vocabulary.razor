@page "/vocabulary"
@rendermode InteractiveServer
@using Blazored.LocalStorage
@using Blazored.Modal
@using Blazored.Modal.Services
@inject DatabaseService Db
@inject ILocalStorageService storageService
@inject NavigationManager NavMenu 
@inject UserState userState
@inject IModalService ModalService
<PageTitle>vocabulary</PageTitle>

@if (!isPlaying)
{
    <h1>Vocabulary Game</h1>
    <p>Test your vocabulary skills! Click the button below to start.</p>
    <div class="centered-container">
        <button class="start-button" @onclick="StartVocabulary">Start</button>
      <button class="options-button" @onclick="GameOptions">Options</button>
      
    </div>
    <p>Logged in as @userState.CurrentUser.Username</p>

}
else
{
    <div class="vocabulary-container">
        <h1>Vocabulary</h1>
        <p>Your score: @score</p>

        @if (CurrentItem != null)
        {
            <p>What is this in English? : <strong>@CurrentItem.FrenchWord</strong></p>
        }
        @if (isHintUsed && !string.IsNullOrEmpty(hint))
        {
            <p>Hint: @hint</p>
        }   

        <textarea 
            @bind="userAnswer" 
            @bind:event="oninput"
            placeholder="Type your answer here..." 
            class="answer-box" 
            disabled="@iscorrect">
        </textarea>

        @if (hasSubmitted)
        {
            <div class="feedback">
                @if (iscorrect)
                {
                    <span class="correct">Correct! Click "Next Question" to continue.</span>
                }
                else
                {
                    <span class="incorrect">Incorrect! The correct answer is: @CurrentItem?.Translation</span>
                }
            </div>
        }

        <div class="centered-container">
            @if (!iscorrect)
            {
                <button class="check-button" @onclick="CheckAnswer">Submit</button>
            }
            else
            {
                <button class="check-button" @onclick="NextQuestion">Next Question</button>
            }

            <button class="end-button" @onclick="EndGame">End</button>  
            @if(!isHintUsed)
            {
            <button class="hint-button" @onclick="UseHint">Hint</button>
            }
        </div>
    </div>
}

@code {
    bool isPlaying = false;
    int score = 0;
    private User currentUser;
    string userAnswer;
    string hint;
    private int currentkey ;
    private bool iscorrect;
    private bool hasSubmitted = false;
    private bool isHintUsed = false;
    int totalCompleted = 0;
    private List<VocabItem> items = new();
    private VocabItem? CurrentItem => items.FirstOrDefault(i => i.VocabID == currentkey);
    private static readonly Random random = new();


  protected override async Task OnInitializedAsync()
  {
        currentUser = await storageService.GetItemAsync<User>("currentUser");
        if(currentUser == null){
            NavMenu.NavigateTo("/login");
        }
        StartVocabulary();
        items = await Db.GetVocabularyAsync();
    }
private VocabItem? GetRandomItem()
{
    if (items == null || items.Count == 0)
        return null; // nothing to pick

    return items[random.Next(items.Count)];
}
   private void StartVocabulary()
{
    var item = GetRandomItem();
    if(item == null){
        isPlaying = false;
        return;
    }

    isPlaying = true;
    userAnswer = "";
    hint = string.Empty;
    currentkey = item.VocabID;
    iscorrect = false;
    hasSubmitted = false;
    isHintUsed = false;
}

   private void NextQuestion(){
    var item = items[random.Next(items.Count)];
    currentkey = item.VocabID;
    userAnswer = "";
    iscorrect = false;
    hasSubmitted = false;
    isHintUsed = false;
}
    private void CheckAnswer(){
        hasSubmitted = true;
    if (string.Equals(userAnswer?.Trim(), CurrentItem?.Translation?.Trim(), StringComparison.OrdinalIgnoreCase)){
        iscorrect = true;
        score++;
        
    }
    else{
        iscorrect = false;
        totalCompleted++;
        if (totalCompleted >= items.Count){
            EndGame();
        }
    }
}

     private void EndGame(){
        var parameters = new ModalParameters();
        parameters.Add(nameof(EndGameModal.Score), score);

        ModalService.Show<EndGameModal>("Game Over", parameters);
    }
    private async Task GameOptions()
{
    var modal = ModalService.Show<OptionsModalVocab>("Game Options");
    var result = await modal.Result;

    if (!result.Cancelled)
    {
        var options = (OptionsModalVocab.VocabOptions)result.Data;
        
    }
}
    private void UseHint(){
        isHintUsed = true;
        hint = CurrentItem?.Hint ?? string.Empty;
    }
}


