@page "/conjugation"
@rendermode InteractiveServer

@using Blazored.LocalStorage
@using Blazored.Modal
@using Blazored.Modal.Services
@using BootstrapBlazor.Components
@using Microsoft.Extensions.Options
@using NEA.Components.Layout

@inject DatabaseService Db
@inject NavigationManager NavMenu
@inject ILocalStorageService LocalStorage
@inject IModalService ModalService
@inject UserState UserState

<PageTitle>Conjugation</PageTitle>

@if (!isLoaded)
{
    <p>Loading...</p>
}
else if (!isPlaying)
{
    <div class="conjugation-container">
    <h1>Conjugation Game</h1>
    <p>Test your conjugation skills! Click the button below to start.</p>

    <div class="centered-container">
        <button class="start-button" @onclick="StartConjugation">Start</button>
        <button class="options-button" @onclick="GameOptions">Options</button>
    </div>
    </div>
}

else
{
    <div class="conjugation-container">
        <h1>Conjugation</h1>
        <p>Your score: @score</p>

        @if (CurrentItem != null)
        {
            <p><strong>@CurrentItem.Pronoun</strong></p>
            <p>Tense: @CurrentItem.Tense</p>
            <p>Verb: @CurrentItem.Verb</p>
        }

        @if (isHintUsed && !string.IsNullOrEmpty(hint))
        {
            <p>Hint: @hint</p>
        }

        <input class="answer-box"
               @bind="userAnswer"
               @bind:event="oninput"
               placeholder="Type your answer..."
               disabled="@iscorrect" />

       @if (hasSubmitted)
        {
            <div class="feedback">
                @if (iscorrect)
                {
                    <span class="correct">Correct! Click "Next Question" to continue.</span>
                }
                else
                {
                    <span class="incorrect">Incorrect! The correct answer is: @CurrentItem?.CorectAnswer</span>
                }
            </div>
        }

        <div class="centered-container">
            @if (!hasSubmitted)
            {
                <button class="check-button" @onclick="CheckAnswer"disabled="@hasSubmitted">Submit</button>
            }
            else
            {
                <button class="check-button" @onclick="NextQuestion">Next</button>
            }

            <button class="end-button" @onclick="EndGame">End</button>

            @if (!isHintUsed && !hasSubmitted)
            {
                <button class="hint-button" @onclick="UseHint">Hint</button>
            }
            @if(isHintUsed && !hasSubmitted){
                <button class="answer-button" @onclick="ShowAnswer">Reveal</button> 
            }
        </div>
    </div>
}

@code {
    private bool isLoaded = false;
    private bool isPlaying = false;
    private bool iscorrect = false;
    private bool hasSubmitted = false;
    private bool isHintUsed = false;
    private bool hasRevealed = false;
    private int score , currentIndex = 0 ;
    private int currentKey;
    private string userAnswer;
    private string hint, showAnswer;

    private List<ConjugationItem> items = new();
    private List<ConjugationItem> activeQuestions = new();
    private ConjugationItem? CurrentItem =>
        items.FirstOrDefault(i => i.ConjugationID == currentKey);
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        var user = await LocalStorage.GetItemAsync<User>("currentUser");
        if (user == null)
        {
            NavMenu.NavigateTo("/login");
            return;
        }

        UserState.SetUser(user);

        items = await Db.GetConjugationAsync();
        ApplyConjugationFilter("All");
        isLoaded = true;

        StateHasChanged();
    }



    private void StartConjugation()
    {
        if (activeQuestions.Count == 0) return;

        var CurrentQuestion = activeQuestions[Random.Shared.Next(activeQuestions.Count)];
        currentKey = CurrentQuestion.ConjugationID;

        isPlaying = true;
        iscorrect = false;
        hasSubmitted = false;
        isHintUsed = false;
        hasRevealed = false;
        userAnswer = "";
        hint = "";
        showAnswer = "";
    }
     private async Task ShowAnswer(){
        hasRevealed = true; 
        hasSubmitted = true;
        iscorrect = false;
        showAnswer = CurrentItem.CorectAnswer;
    }
    private async Task CheckAnswer()
    {
        hasSubmitted = true;

        if (string.Equals( userAnswer.Trim(), CurrentItem?.CorectAnswer?.Trim(),StringComparison.OrdinalIgnoreCase)){
            iscorrect = true;
            int pointsEarned = isHintUsed? 0:1;
            score += pointsEarned;
            await Db.SaveUserScoreAsync(
                UserState.CurrentUser!.UserID,
                "conjugs",
                currentKey,
                1,
                true);
            }
            UserState.CurrentUser.TotalScore++;
            await LocalStorage.SetItemAsync("currentUser", UserState.CurrentUser);
        
    }

    private void NextQuestion()
    {
        StartConjugation();
    }

    private void UseHint()
    {
        isHintUsed = true;
        hint = CurrentItem?.Hint ?? "";
    }

    private void EndGame()
    {
        var parameters = new ModalParameters
        {
            { nameof(EndGameModal.Score), score }
        };

        ModalService.Show<EndGameModal>("Game Over", parameters);
        isPlaying = false;
        score = 0;
    }
    private void ApplyConjugationFilter(string selectedList){
        activeQuestions = 
        selectedList == "All"
            ? items.ToList()
            :items . Where(x => x.Options == selectedList)
            .ToList();
        currentIndex = 0;
        if(activeQuestions.Any()){
            currentKey = activeQuestions[Random.Shared.Next(activeQuestions.Count)].ConjugationID;
            iscorrect = false;
            hasSubmitted = false;
            isHintUsed = false;
            hasRevealed=false;
            userAnswer="";
            hint = " ";
        }
        StateHasChanged();
    }

    private async Task GameOptions()
    {
        var modal = ModalService.Show<OptionsModalConjugation>("Game Options");
        var result =await modal.Result;
        if(!result.Cancelled && result.Data is OptionsModalConjugation.ConjugationOptions options){
            ApplyConjugationFilter(options.SelectedList);
        }
    }
}

