@page "/conjugation"
@rendermode InteractiveServer

@using Blazored.LocalStorage
@using Blazored.Modal
@using Blazored.Modal.Services
@using NEA.Components.Layout

@inject DatabaseService Db
@inject NavigationManager NavMenu
@inject ILocalStorageService LocalStorage
@inject IModalService ModalService
@inject UserState UserState

<PageTitle>Conjugation</PageTitle>

@if (!isLoaded)
{
    <p>Loading...</p>
}
else if (!isPlaying)
{
    <h1>Conjugation Game</h1>
    <p>Test your conjugation skills! Click the button below to start.</p>

    <div class="centered-container">
        <button class="start-button" @onclick="StartConjugation">Start</button>
        <button class="options-button" @onclick="GameOptions">Options</button>
    </div>

    @if (UserState.CurrentUser != null)
    {
        <p>Logged in as <strong>@UserState.CurrentUser.Username</strong></p>
    }
}
else
{
    <div class="conjugation-container">
        <h1>Conjugation</h1>
        <p>Your score: @score</p>

        @if (CurrentItem != null)
        {
            <p><strong>@CurrentItem.Pronoun</strong></p>
            <p>Tense: @CurrentItem.Tense</p>
            <p>Verb: @CurrentItem.Verb</p>
        }

        @if (isHintUsed && !string.IsNullOrEmpty(hint))
        {
            <p>Hint: @hint</p>
        }

        <input class="answer-box"
               @bind="userAnswer"
               @bind:event="oninput"
               placeholder="Type your answer..."
               disabled="@iscorrect" />

        @if (hasSubmitted)
        {
            <div class="feedback">
                @if (iscorrect)
                {
                    <span class="correct">Correct!</span>
                }
                else
                {
                    <span class="incorrect">Incorrect</span>
                }
            </div>
        }

        <div class="centered-container">
            @if (!iscorrect)
            {
                <button class="check-button" @onclick="CheckAnswer">Submit</button>
            }
            else
            {
                <button class="check-button" @onclick="NextQuestion">Next</button>
            }

            <button class="end-button" @onclick="EndGame">End</button>

            @if (!isHintUsed)
            {
                <button class="hint-button" @onclick="UseHint">Hint</button>
            }
        </div>
    </div>
}

@code {
    private bool isLoaded = false;
    private bool isPlaying = false;
    private bool iscorrect = false;
    private bool hasSubmitted = false;
    private bool isHintUsed = false;

    private int score = 0;
    private int currentKey;
    private string userAnswer = "";
    private string hint = "";

    private List<ConjugationItem> items = new();
    private ConjugationItem? CurrentItem =>
        items.FirstOrDefault(i => i.ConjugationID == currentKey);
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        var user = await LocalStorage.GetItemAsync<User>("currentUser");
        if (user == null)
        {
            NavMenu.NavigateTo("/login");
            return;
        }

        UserState.SetUser(user);

        items = await Db.GetConjugationAsync();
        isLoaded = true;

        StateHasChanged();
    }

    private void StartConjugation()
    {
        if (items.Count == 0) return;

        var item = items[Random.Shared.Next(items.Count)];
        currentKey = item.ConjugationID;

        isPlaying = true;
        iscorrect = false;
        hasSubmitted = false;
        isHintUsed = false;
        userAnswer = "";
        hint = "";
    }

    private async Task CheckAnswer()
    {
        hasSubmitted = true;

        if (string.Equals(
            userAnswer.Trim(),
            CurrentItem?.Verb?.Trim(),
            StringComparison.OrdinalIgnoreCase))
        {
            iscorrect = true;
            score++;

            await Db.SaveUserScoreAsync(
                UserState.CurrentUser!.UserID,
                "Conjugation",
                currentKey,
                1,
                true);

            UserState.CurrentUser.TotalScore++;
            await LocalStorage.SetItemAsync("currentUser", UserState.CurrentUser);
        }
    }

    private void NextQuestion()
    {
        StartConjugation();
    }

    private void UseHint()
    {
        isHintUsed = true;
        hint = CurrentItem?.Hint ?? "";
    }

    private void EndGame()
    {
        var parameters = new ModalParameters
        {
            { nameof(EndGameModal.Score), score }
        };

        ModalService.Show<EndGameModal>("Game Over", parameters);
        isPlaying = false;
        score = 0;
    }

    private async Task GameOptions()
    {
        var modal = ModalService.Show<OptionsModalConjugation>("Game Options");
        await modal.Result;
    }
}

<style>

