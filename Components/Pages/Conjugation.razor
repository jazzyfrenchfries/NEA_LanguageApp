@page "/conjugation"
@rendermode InteractiveServer
@using Blazored.LocalStorage
@using Blazored.Modal
@using Blazored.Modal.Services
@using NEA.Components.Layout
@inject DatabaseService Db
@inject NavigationManager NavMenu
@inject ILocalStorageService storageService
@inject IModalService ModalService
@inject UserState userState
<PageTitle>Conjugation</PageTitle>
@if (!isPlaying)
{
    <h1>Conjugation Game</h1>
    <p>Test your conjugation skills! Click the button below to start.</p>
    <div class="centered-container">
        <button class="start-button" @onclick="StartConjugation">Start</button>
      <button class="options-button" @onclick="GameOptions">Options</button>

    </div>
    <p>Logged in as @userState.CurrentUser.Username</p>
}
else
{
    <div class="conjugation-container">
        <h1>Conjugation</h1>
        <p>Your score: @score</p>

        @if (CurrentItem != null)
        {
            <p>Fill in the gaps: <strong>@CurrentItem.Phrase</strong></p>
            <p> Tense: @CurrentItem.Tense</p>
            <p>Verb: @CurrentItem.Verb</p>
        }
        @if (isHintUsed && !string.IsNullOrEmpty(hint))
        {
            <p>Hint: @hint</p>
        }    

        <textarea 
            @bind="userAnswer" 
            @bind:event="oninput" 
            placeholder="Type your answer here..." 
            class="answer-box" 
            disabled="@iscorrect">
        </textarea>
    
        @if (hasSubmitted)
        {
            <div class="feedback">
                @if (iscorrect)
                {
                    <span class="correct">Correct! Click "Next Question" to continue.</span>
                }
                else
                {
                    <span class="incorrect">Incorrect!</span>
                }
            </div>
        }

        <div class="centered-container">
            @if (!iscorrect)
            {
                <button class="check-button" @onclick="CheckAnswer">Submit</button>
            }
            else
            {
                <button class="check-button" @onclick="NextQuestion">Next Question</button>
            }

            <button class="end-button" @onclick="EndGame">End</button>  
            @if(!isHintUsed)
            {
            <button class="hint-button" @onclick="UseHint">Hint</button>
            }
        </div>
    </div>
}

@code {
    private User currentUser;
bool isPlaying = false;
    int score = 0;
    string userAnswer;
    string hint;
    private int currentkey ;
    private bool iscorrect;
    private bool hasSubmitted = false;
    private bool isHintUsed = false;
    private string defaultConjugationList = "Conjugation";
    int totalCompleted = 0;
    private List<ConjugationItem> items = new();
     private ConjugationItem? CurrentItem => items.FirstOrDefault(i => i.Key == currentkey);
    private static readonly Random random = new();
     public class ConjugationItem
    {
        public int Key { get; set; }
        public string Phrase{ get; set; } = string.Empty;
        public string GapFill { get; set; } = string.Empty;
        public string Verb{get; set; } = string.Empty;
        public string Tense{get; set; } = string.Empty;
        public string Hint { get; set; } = string.Empty;
    }
    protected override async void OnInitialized(){
        currentUser = await storageService.GetItemAsync<User>("currentUser");
        if(currentUser == null){
            NavMenu.NavigateTo("/login");
        }
        
    LoadConjugationList(defaultConjugationList);
}
private ConjugationItem? GetRandomItem()
{
    if (items == null || items.Count == 0)
        return null; // nothing to pick

    return items[random.Next(items.Count)];
}
   private void StartConjugation()
{
    var item = GetRandomItem();

    isPlaying = true;
    userAnswer = "";
    hint = string.Empty;
    currentkey = item.Key;
    iscorrect = false;
    hasSubmitted = false;
    isHintUsed = false;
}

   private void NextQuestion(){
    var item = items[random.Next(items.Count)];
    currentkey = item.Key;
    userAnswer = "";
    iscorrect = false;
    hasSubmitted = false;
    isHintUsed = false;
}
    private async Task CheckAnswer(){
        hasSubmitted = true;
    if (string.Equals(userAnswer?.Trim(), CurrentItem?.GapFill?.Trim(), StringComparison.OrdinalIgnoreCase)){
        iscorrect = true;
        score++;
        await Db.SaveUserScoreAsync(currentUser.UserID,"Conjugation",currentkey,score,iscorrect);
        currentUser.TotalScore += score;
        await storageService.SetItemAsync("currentUser", currentUser);
        
    }
    else{
        iscorrect = false;
        totalCompleted++;
        if (totalCompleted >= items.Count){
            EndGame();
        }
    }
}

     private void EndGame(){
        var parameters = new ModalParameters();
        parameters.Add(nameof(EndGameModal.Score), score);

        ModalService.Show<EndGameModal>("Game Over", parameters);
    }
    private async Task GameOptions()
{
    var modal = ModalService.Show<OptionsModalConjugation>("Game Options");
    var result = await modal.Result;

    if (!result.Cancelled)
    {
        var options = (OptionsModalConjugation.ConjugationOptions)result.Data;
        LoadConjugationList(options.SelectedList);
    }
}
    private void UseHint(){
        isHintUsed = true;
        hint = CurrentItem?.Hint ?? string.Empty;
    }

private void LoadConjugationList(string listName){
    var filePath = Path.Combine(Directory.GetCurrentDirectory(), "Data/Conjugation", $"{listName}.json");
    if (File.Exists(filePath))
    {
        var json = File.ReadAllText(filePath);
        items = System.Text.Json.JsonSerializer.Deserialize<List<ConjugationItem>>(json) ?? new List<ConjugationItem>();
    }
    else
    {
        items = new List<ConjugationItem>(); 
    }
}
}

