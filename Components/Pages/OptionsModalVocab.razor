@inject Blazored.Modal.Services.IModalService ModalService
@using Blazored.Modal
@using Microsoft.Extensions.Options

@inject DatabaseService databaseService

<div class="options-modal">
    <h2>Vocabulary Options</h2>

    <div class="option-group">
        <label>Select Vocabulary List:</label>
        <select @bind="selectedList" class="options-select">
            @foreach (var list in vocabLists)
            {
                <option value="@list">@list</option>
            }
        </select>
    </div>

    <div class="options-buttons">
        <button class="check-button" @onclick="ApplyOptions">Apply</button>
        <button class="end-button" @onclick="Cancel">Cancel</button>
    </div>
</div>
@code {
    [Parameter] 
    public VocabItem vocabItem {get; set;}
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }
    private List<string> vocabLists = new();
    private List<VocabItem> allItems = new List<VocabItem>();
    private string selectedList = "All";
    
    protected override async Task OnInitializedAsync(){
        allItems = await databaseService. GetVocabularyAsync();
        AddOptionsToList();
    }
    private  void OnParametersSet(){
        vocabLists.Clear();
        vocabLists.Add("All");
        AddOptionsToList(); 
        selectedList = vocabLists.First();
    }
    private void AddOptionsToList(){
        vocabLists.Clear();
        vocabLists.Add("All");
        vocabLists.AddRange(allItems
            .Where(x=> !string.IsNullOrEmpty(x.Options))
            .Select(x => x.Options)
            .Distinct());
        selectedList= "All";
    }
    private List<VocabItem> FilteredQuestionSet =>
    selectedList == "All"
    ? allItems: allItems.Where( x=> x.Options == selectedList).ToList();
    private async Task ApplyOptions()
    {
        var result = new VocabularyOptions
        {
            SelectedList = selectedList
        };

        await BlazoredModal.CloseAsync(ModalResult.Ok(result));
    }

    private async Task Cancel() => BlazoredModal.CancelAsync();

    public class VocabularyOptions
    {
        public string SelectedList { get; set; }
    }
}
